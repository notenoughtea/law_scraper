.PHONY: help build run-scraper run-cron run-bot test-telegram docker-build docker-up docker-down clean check-commit

help: ## –ü–æ–∫–∞–∑–∞—Ç—å —ç—Ç—É —Å–ø—Ä–∞–≤–∫—É
	@echo "–î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[36m%-20s\033[0m %s\n", $$1, $$2}'

build: ## –°–æ–±—Ä–∞—Ç—å –≤—Å–µ –±–∏–Ω–∞—Ä–Ω–∏–∫–∏
	@echo "–°–±–æ—Ä–∫–∞ –±–∏–Ω–∞—Ä–Ω–∏–∫–æ–≤..."
	@mkdir -p bin
	@cd scraper && go build -o ../bin/scraper cmd/scraper/main.go
	@cd scraper && go build -o ../bin/cron cmd/cron/main.go
	@cd scraper && go build -o ../bin/bot cmd/bot/main.go
	@cd scraper && go build -o ../bin/test-telegram cmd/test-telegram/main.go
	@echo "‚úÖ –°–±–æ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! –ë–∏–Ω–∞—Ä–Ω–∏–∫–∏ –≤ –ø–∞–ø–∫–µ bin/"

run-scraper: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ä–∞–∑–æ–≤–æ–µ —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
	@echo "–ó–∞–ø—É—Å–∫ —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏—è..."
	@cd scraper && go run cmd/scraper/main.go

run-cron: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å –∫—Ä–æ–Ω-–∑–∞–¥–∞—á—É
	@echo "–ó–∞–ø—É—Å–∫ –∫—Ä–æ–Ω-–ø–ª–∞–Ω–∏—Ä–æ–≤—â–∏–∫–∞..."
	@cd scraper && go run cmd/cron/main.go

run-bot: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å –∏–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–≥–æ Telegram –±–æ—Ç–∞
	@echo "–ó–∞–ø—É—Å–∫ Telegram –±–æ—Ç–∞..."
	@cd scraper && go run cmd/bot/main.go

test-telegram: ## –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ Telegram
	@echo "–û—Ç–ø—Ä–∞–≤–∫–∞ —Ç–µ—Å—Ç–æ–≤–æ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è –≤ Telegram..."
	@cd scraper && go run cmd/test-telegram/main.go

docker-build: ## –°–æ–±—Ä–∞—Ç—å Docker –æ–±—Ä–∞–∑
	@echo "–°–±–æ—Ä–∫–∞ Docker –æ–±—Ä–∞–∑–∞..."
	@docker build -t law-scraper .

docker-up: ## –ó–∞–ø—É—Å—Ç–∏—Ç—å —á–µ—Ä–µ–∑ Docker Compose
	@echo "–ó–∞–ø—É—Å–∫ Docker Compose..."
	@docker-compose up -d
	@echo "‚úÖ –°–µ—Ä–≤–∏—Å –∑–∞–ø—É—â–µ–Ω!"
	@echo "–ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤: make docker-logs"

docker-down: ## –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å Docker Compose
	@echo "–û—Å—Ç–∞–Ω–æ–≤–∫–∞ Docker Compose..."
	@docker-compose down

docker-logs: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ Docker Compose
	@docker-compose logs -f

docker-logs-bot: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ Telegram –±–æ—Ç–∞
	@docker-compose logs -f law-scraper-bot

docker-logs-cron: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ –∫—Ä–æ–Ω-–∑–∞–¥–∞—á–∏
	@docker-compose logs -f law-scraper-cron

docker-restart: docker-down docker-up ## –ü–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç—å Docker Compose

clean: ## –û—á–∏—Å—Ç–∏—Ç—å —Å–æ–±—Ä–∞–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã
	@echo "–û—á–∏—Å—Ç–∫–∞..."
	@rm -rf bin/
	@rm -rf data/matched/*
	@echo "‚úÖ –û—á–∏—Å—Ç–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞"

deps: ## –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏
	@echo "–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π..."
	@cd scraper && go mod download
	@echo "‚úÖ –ó–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã"

check-env: ## –ü—Ä–æ–≤–µ—Ä–∏—Ç—å .env —Ñ–∞–π–ª
	@if [ ! -f .env ]; then \
		echo "‚ùå –§–∞–π–ª .env –Ω–µ –Ω–∞–π–¥–µ–Ω!"; \
		echo "–°–æ–∑–¥–∞–π—Ç–µ .env —Ñ–∞–π–ª –Ω–∞ –æ—Å–Ω–æ–≤–µ TELEGRAM_SETUP.md"; \
		exit 1; \
	else \
		echo "‚úÖ –§–∞–π–ª .env –Ω–∞–π–¥–µ–Ω"; \
	fi

# =============================================================================
# –î–µ–ø–ª–æ–π –∫–æ–º–∞–Ω–¥—ã
# =============================================================================

setup-server: ## –ü–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω–∞—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞ (77.105.133.231)
	@echo "üîß –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞..."
	@chmod +x deployment/scripts/setup-server.sh
	@./deployment/scripts/setup-server.sh

deploy: ## –î–µ–ø–ª–æ–π –Ω–∞ –ø—Ä–æ–¥–∞–∫—à–Ω —Å–µ—Ä–≤–µ—Ä
	@echo "üöÄ –î–µ–ø–ª–æ–π –Ω–∞ —Å–µ—Ä–≤–µ—Ä..."
	@chmod +x deployment/scripts/deploy.sh
	@./deployment/scripts/deploy.sh

status: ## –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å—Ç–∞—Ç—É—Å –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ
	@echo "üìä –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞—Ç—É—Å–∞..."
	@chmod +x deployment/scripts/status.sh
	@./deployment/scripts/status.sh

logs-server: ## –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ —Å —Å–µ—Ä–≤–µ—Ä–∞
	@echo "üìã –ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤..."
	@chmod +x deployment/scripts/logs.sh
	@./deployment/scripts/logs.sh

logs-server-follow: ## –°–ª–µ–¥–∏—Ç—å –∑–∞ –ª–æ–≥–∞–º–∏ –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ
	@echo "üìã –ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤ (following)..."
	@chmod +x deployment/scripts/logs.sh
	@./deployment/scripts/logs.sh --follow

restart-server: ## –ü–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç—å –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ
	@echo "üîÑ –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫..."
	@chmod +x deployment/scripts/restart.sh
	@./deployment/scripts/restart.sh

add-ssh-key: ## –î–æ–±–∞–≤–∏—Ç—å –ø—É–±–ª–∏—á–Ω—ã–π SSH –∫–ª—é—á –Ω–∞ —Å–µ—Ä–≤–µ—Ä
	@echo "üì§ –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –ø—É–±–ª–∏—á–Ω–æ–≥–æ SSH –∫–ª—é—á–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä..."
	@chmod +x deployment/scripts/add-ssh-key.sh
	@./deployment/scripts/add-ssh-key.sh

update-deployment-info: ## –°–æ–∑–¥–∞—Ç—å –∏ –æ—Ç–ø—Ä–∞–≤–∏—Ç—å .deployment_info –Ω–∞ —Å–µ—Ä–≤–µ—Ä
	@echo "üì¶ –°–æ–∑–¥–∞–Ω–∏–µ —Ñ–∞–π–ª–∞ .deployment_info..."
	@if ! git rev-parse --git-dir > /dev/null 2>&1; then \
		echo "‚ùå –ù–µ git —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π"; \
		exit 1; \
	fi
	@COMMIT_HASH=$$(git rev-parse HEAD); \
	COMMIT_AUTHOR=$$(git log -1 --pretty=format:'%an <%ae>' | sed 's/"/\\"/g'); \
	COMMIT_MESSAGE=$$(git log -1 --pretty=format:'%s' | sed 's/"/\\"/g' | sed "s/'/\\'/g"); \
	DEPLOY_DATE=$$(date -u +'%Y-%m-%d %H:%M:%S UTC'); \
	BRANCH=$$(git branch --show-current || git rev-parse --abbrev-ref HEAD | sed 's/"/\\"/g'); \
	echo "COMMIT_HASH=\"$$COMMIT_HASH\"" > .deployment_info; \
	echo "COMMIT_AUTHOR=\"$$COMMIT_AUTHOR\"" >> .deployment_info; \
	echo "COMMIT_MESSAGE=\"$$COMMIT_MESSAGE\"" >> .deployment_info; \
	echo "DEPLOY_DATE=\"$$DEPLOY_DATE\"" >> .deployment_info; \
	echo "BRANCH=\"$$BRANCH\"" >> .deployment_info; \
	echo "WORKFLOW_RUN=\"manual\"" >> .deployment_info; \
	echo "‚úÖ –§–∞–π–ª .deployment_info —Å–æ–∑–¥–∞–Ω:"; \
	cat .deployment_info; \
	echo ""; \
	echo "üì§ –ö–æ–ø–∏—Ä—É–µ–º –Ω–∞ —Å–µ—Ä–≤–µ—Ä..."; \
	scp -o StrictHostKeyChecking=no .deployment_info root@77.105.133.231:/opt/law_scraper/.deployment_info && \
	echo "‚úÖ –§–∞–π–ª —É—Å–ø–µ—à–Ω–æ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω –Ω–∞ —Å–µ—Ä–≤–µ—Ä!" || \
	(echo "‚ùå –û—à–∏–±–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è"; exit 1)

check-commit: ## –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –ø–æ—Å–ª–µ–¥–Ω–∏–π –ª–∏ –∫–æ–º–º–∏—Ç –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ
	@echo "üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –∫–æ–º–º–∏—Ç–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ..."
	@echo ""
	@echo "üìã –õ–æ–∫–∞–ª—å–Ω—ã–π —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π:"
	@if git rev-parse --git-dir > /dev/null 2>&1; then \
		git log -1 --pretty=format:"  –•–µ—à: %H%n  –ê–≤—Ç–æ—Ä: %an <%ae>%n  –î–∞—Ç–∞: %ad%n  –°–æ–æ–±—â–µ–Ω–∏–µ: %s" --date=format:"%Y-%m-%d %H:%M:%S"; \
	else \
		echo "  ‚ö†Ô∏è  –ù–µ git —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π"; \
	fi
	@echo ""
	@echo "üìã –ù–∞ —Å–µ—Ä–≤–µ—Ä–µ (77.105.133.231):"
	@SSH_OUTPUT=$$(ssh -o StrictHostKeyChecking=no -o ConnectTimeout=10 -o BatchMode=yes root@77.105.133.231 'cd /opt/law_scraper 2>/dev/null && if [ -d .git ]; then echo "GIT_FOUND"; git log -1 --pretty=format:"  –•–µ—à: %H%n  –ê–≤—Ç–æ—Ä: %an <%ae>%n  –î–∞—Ç–∞: %ad%n  –°–æ–æ–±—â–µ–Ω–∏–µ: %s" --date=format:"%Y-%m-%d %H:%M:%S" 2>/dev/null; elif [ -d scraper ]; then echo "NO_GIT"; echo "  üìÅ Git —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π –Ω–µ –Ω–∞–π–¥–µ–Ω –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ"; if [ -f .deployment_info ]; then echo "  üì¶ –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –¥–µ–ø–ª–æ–µ:"; COMMIT_HASH_VAL=$$(grep "^COMMIT_HASH=" .deployment_info 2>/dev/null | cut -d"=" -f2- | sed "s/^\"//; s/\"\$$//"); COMMIT_AUTHOR_VAL=$$(grep "^COMMIT_AUTHOR=" .deployment_info 2>/dev/null | cut -d"=" -f2- | sed "s/^\"//; s/\"\$$//"); DEPLOY_DATE_VAL=$$(grep "^DEPLOY_DATE=" .deployment_info 2>/dev/null | cut -d"=" -f2- | sed "s/^\"//; s/\"\$$//"); COMMIT_MESSAGE_VAL=$$(grep "^COMMIT_MESSAGE=" .deployment_info 2>/dev/null | cut -d"=" -f2- | sed "s/^\"//; s/\"\$$//"); BRANCH_VAL=$$(grep "^BRANCH=" .deployment_info 2>/dev/null | cut -d"=" -f2- | sed "s/^\"//; s/\"\$$//"); [ -n "$$COMMIT_HASH_VAL" ] && echo "    –•–µ—à –∫–æ–º–º–∏—Ç–∞: $$COMMIT_HASH_VAL"; [ -n "$$COMMIT_AUTHOR_VAL" ] && echo "    –ê–≤—Ç–æ—Ä: $$COMMIT_AUTHOR_VAL"; [ -n "$$DEPLOY_DATE_VAL" ] && echo "    –î–∞—Ç–∞ –¥–µ–ø–ª–æ—è: $$DEPLOY_DATE_VAL"; [ -n "$$COMMIT_MESSAGE_VAL" ] && echo "    –°–æ–æ–±—â–µ–Ω–∏–µ: $$COMMIT_MESSAGE_VAL"; [ -n "$$BRANCH_VAL" ] && echo "    –í–µ—Ç–∫–∞: $$BRANCH_VAL"; else echo "  ‚ö†Ô∏è  –§–∞–π–ª .deployment_info –Ω–µ –Ω–∞–π–¥–µ–Ω"; fi; echo "  üìã –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–µ—Ä—Å–∏–∏ —á–µ—Ä–µ–∑ Docker:"; if command -v docker-compose > /dev/null 2>&1; then docker-compose ps 2>/dev/null | grep -q "Up" && echo "    ‚úÖ –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã –∑–∞–ø—É—â–µ–Ω—ã" || echo "    ‚ö†Ô∏è  –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã –Ω–µ –∑–∞–ø—É—â–µ–Ω—ã"; fi; else echo "NO_DIR"; echo "  ‚ùå –î–∏—Ä–µ–∫—Ç–æ—Ä–∏—è /opt/law_scraper –Ω–µ –Ω–∞–π–¥–µ–Ω–∞"; fi' 2>&1); \
	SSH_EXIT=$$?; \
	if [ $$SSH_EXIT -eq 0 ]; then \
		echo "$$SSH_OUTPUT"; \
	elif echo "$$SSH_OUTPUT" | grep -q "Permission denied"; then \
		echo "  ‚ùå –û—à–∏–±–∫–∞: Permission denied"; \
		echo "  üí° –ü—Ä–æ–≤–µ—Ä—å—Ç–µ SSH –∫–ª—é—á:"; \
		echo "     ssh-keygen -t rsa -b 4096"; \
		echo "     ssh-copy-id root@77.105.133.231"; \
	elif echo "$$SSH_OUTPUT" | grep -q "Connection refused\|Connection timed out"; then \
		echo "  ‚ùå –û—à–∏–±–∫–∞: –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ —Å–µ—Ä–≤–µ—Ä—É"; \
		echo "  üí° –ü—Ä–æ–≤–µ—Ä—å—Ç–µ:"; \
		echo "     - –î–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å —Å–µ—Ä–≤–µ—Ä–∞: ping 77.105.133.231"; \
		echo "     - SSH —Å–µ—Ä–≤–∏—Å –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ: ssh root@77.105.133.231"; \
	else \
		echo "  ‚ùå –û—à–∏–±–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è"; \
		echo "  üí° –û—à–∏–±–∫–∞: $$SSH_OUTPUT"; \
	fi
	@echo ""
	@echo "üîç –°—Ä–∞–≤–Ω–µ–Ω–∏–µ:"
	@LOCAL_HASH=$$(git rev-parse HEAD 2>/dev/null); \
	if [ -n "$$LOCAL_HASH" ]; then \
		chmod +x deployment/scripts/get-commit-hash.sh 2>/dev/null; \
		REMOTE_HASH=$$(./deployment/scripts/get-commit-hash.sh 2>/dev/null); \
		if [ -z "$$REMOTE_HASH" ]; then \
			echo "  ‚ö†Ô∏è  –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –∫–æ–º–º–∏—Ç —Å —Å–µ—Ä–≤–µ—Ä–∞"; \
			echo "     –õ–æ–∫–∞–ª—å–Ω—ã–π: $$LOCAL_HASH"; \
			echo ""; \
			echo "  üí° –í–æ–∑–º–æ–∂–Ω—ã–µ –ø—Ä–∏—á–∏–Ω—ã:"; \
			echo "     - –ù–∞ —Å–µ—Ä–≤–µ—Ä–µ –Ω–µ—Ç git —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏—è –∏ —Ñ–∞–π–ª–∞ .deployment_info"; \
			echo "     - –ü—Ä–æ–±–ª–µ–º—ã —Å SSH –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ–º"; \
			echo "  üí° –î–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è: make deploy"; \
		elif [ "$$REMOTE_HASH" = "$$LOCAL_HASH" ]; then \
			echo "  ‚úÖ –ö–æ–º–º–∏—Ç—ã —Å–æ–≤–ø–∞–¥–∞—é—Ç - –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ –ø–æ—Å–ª–µ–¥–Ω—è—è –≤–µ—Ä—Å–∏—è!"; \
		else \
			echo "  ‚ö†Ô∏è  –ö–æ–º–º–∏—Ç—ã –æ—Ç–ª–∏—á–∞—é—Ç—Å—è:"; \
			echo "     –õ–æ–∫–∞–ª—å–Ω—ã–π:  $$LOCAL_HASH"; \
			echo "     –ù–∞ —Å–µ—Ä–≤–µ—Ä–µ: $$REMOTE_HASH"; \
			echo ""; \
			echo "  üí° –î–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è: make deploy"; \
		fi; \
	else \
		echo "  ‚ö†Ô∏è  –ù–µ git —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π –ª–æ–∫–∞–ª—å–Ω–æ"; \
	fi

# =============================================================================
# –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
# =============================================================================

info: ## –ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø—Ä–æ–µ–∫—Ç–µ
	@echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
	@echo "‚ïë           Law Scraper - –ú–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ –ù–ü–ê                     ‚ïë"
	@echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
	@echo ""
	@echo "üìç –ü—Ä–æ–¥–∞–∫—à–Ω —Å–µ—Ä–≤–µ—Ä: 77.105.133.231"
	@echo "üìÅ –î–∏—Ä–µ–∫—Ç–æ—Ä–∏—è –Ω–∞ —Å–µ—Ä–≤–µ—Ä–µ: /opt/law_scraper"
	@echo ""
	@echo "–û—Å–Ω–æ–≤–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:"
